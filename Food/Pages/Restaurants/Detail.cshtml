@page "{restaurantId:int}"
@model Food.Pages.Restaurants.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h1>@Model.Restaurant.Name</h1>
<div>
    Location: @Model.Restaurant.Location
</div>
<div>
    Cuisine: @Model.Restaurant.Cuisine
</div>

@if(Model.Message != null)
{
    <div class="alert alert-info">
        @Model.Message
    </div>
}

<a asp-page="./List" class="btn btn-outline-dark">All Restraunt</a>

